<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>procesarRegistrar</servlet-name>
        <servlet-class>controlador.procesarRegistrar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>procesarLogin</servlet-name>
        <servlet-class>controlador.procesarLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>procesarPublicar</servlet-name>
        <servlet-class>controlador.procesarPublicar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>procesarEditarMensaje</servlet-name>
        <servlet-class>controlador.procesarEditarMensaje</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>procesarMostrarMensajes</servlet-name>
        <servlet-class>controlador.procesarMostrarMensajes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>procesarCerrarSesion</servlet-name>
        <servlet-class>controlador.procesarCerrarSesion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>procesarRegistrar</servlet-name>
        <url-pattern>/procesarRegistrar.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>procesarLogin</servlet-name>
        <url-pattern>/procesarLogin.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>procesarPublicar</servlet-name>
        <url-pattern>/procesarPublicar.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>procesarEditarMensaje</servlet-name>
        <url-pattern>/procesarEditarMensaje.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>procesarMostrarMensajes</servlet-name>
        <url-pattern>/procesarMostrarMensajes.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>procesarCerrarSesion</servlet-name>
        <url-pattern>/procesarCerrarSesion.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
